html,body{height:100%;background-image:url(../images/login/bg.jpg); }
.login-box{}
.login-box{width: 1280px; height: 800px; position: absolute; z-index:0; left:50%; top:50%; margin:-400px 0 0 -640px; }
.login-box .login-frame{background-image: url(../images/login/login-frame.png);}
.login-box .login-frame{width: 750px; height: 500px; position: absolute; z-index:9; left:50%; top:50%; margin:-320px 0 0 -375px;}
.login-box .login-frame .login-logo{background-image: url(../images/login/login-logo.png);}
.login-box .login-frame .login-logo{width: 220px; height: 192px; margin:0 auto; margin-top:30px; }
.login-box .login-frame .login-logo2{background-image: url(../images/login/login-logo2.png);}
.login-box .login-frame .login-logo2{width: 280px; height: 150px; margin:0 auto; margin-top:60px; }
.login-box .login-frame .login-input{padding:20px 0 0 0; overflow: hidden; }
.login-box .login-frame .login-input input{background-image: url(../images/login/login-input.png);}
.login-box .login-frame .login-input input{  color:#fff; text-indent:30px; width: 260px; height: 50px; line-height: 40px; float: left; border:none; background-color:transparent; }
.login-box .login-frame .login-input input:focus{background-position-y: -51px; color:#67aaff; }
.login-box .login-frame .login-input .user{margin:0 0 0 105px; background-position: 0 -102px;}
.login-box .login-frame .login-input .password{margin:0 0 0 20px; background-position: -261px -102px;}

.login-box .login-frame .login-check{height: 30px; margin:20px 0 0 0; overflow: hidden; }
.login-box .login-frame .login-check .mycheckbox{background-image: url(../images/login/login-check.png);}
.login-box .login-frame .login-check .mycheckbox{border: none; background-color:transparent; margin:0px 0px 0 285px; min-height:18px;  padding:2px 0 0 18px;display:inline; }
.login-box .login-frame .login-check .mycheckbox:hover{background-position: 0 -19px;}
.login-box .login-frame .login-check .mycheckbox.active{background-position: 0 -38px;}
.login-box .login-frame .login-check [class*="-pass"]{ line-height: 30px;  }
.login-box .login-frame .login-check .forget-pass{margin:0 0 0 20px; }
.login-box .login-frame .login-button{background-image: url(../images/login/login-button.png);}
.login-box .login-frame .login-button{ width: 250px; height: 40px; margin:20px 0 0 253px;}
.login-box .login-frame .login-button:hover{  background-position: 0 -41px; }
.login-box .login-frame .login-button:active{ background-position: 0 -82px; }
