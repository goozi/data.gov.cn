@charset "utf-8";

body,html{width:100%; height:100%; margin:0; font-size:12px;}
body{background-image:url(../images/login/bg.png); background-position:center center; background-repeat:no-repeat; background-color:#eeeef0;}
ul,li{padding:0;margin:0; list-style:none;}

.frame{background-image:url(../images/login/frame.png);}
.frame .user,
.frame .pass,
.frame .submit,
.frame .remUP{background-image:url(../images/login/object.png); position:absolute;}
#dialog .download .loadIE8{background-image:url(../images/login/downloadBtn.png);}
#dialog .download .browser li{background-image:url(../images/login/browser.png);}
#dialog .download .custom li{background-image:url(../images/login/custom.png);}
#dialog .dialogBg{background-image:url(../images/login/dialogBg.png);}
.loading{background-image:url(../images/login/loading01.gif);}

.loading{background-position:center 250px; background-repeat:no-repeat; background-color:#fff;  position:absolute; left:0;top:0; width:100%; height:100%; z-index:999; }

.frame{ width:740px;height:380px; position:absolute;  left:50%; top:50%; margin:-210px 0 0 -370px; }
.frame .user,
.frame .pass{width:187px; height:32px; bottom:35px; font:bold 14px/30px Tahoma,"Micrsoft Yahei"; background-color:transparent; border:none; padding-left:33px; color:#3161c8; }
.frame .user.blur,
.frame .pass.blur{color:#686868;}
.frame .user{left:40px; background-position:0 0;}
.frame .user.focus{ background-position:0 -33px;}
.frame .user.blur { background-position:0 -66px;}
.frame .pass{left:275px; background-position:-221px 0;}
.frame .pass.focus{ background-position:-221px -33px;}
.frame .pass.blur { background-position:-221px -66px;}

.frame .submit{ width:90px; height:90px;  z-index:8; bottom:-15px; right:150px; cursor:pointer; background-position:-442px 0; border:0; background-color:transparent; }
.frame .submit.hover{ background-position:-442px -91px;}

.frame .remUP{ width:30px; height:30px; z-index:9; right:133px; bottom:46px;  cursor:pointer; background-position:-533px 0;}
.frame .remUP.hover { background-position:-533px -31px;}
.frame .remUP.active{ background-position:-533px -62px;}

.frame .icons{position:absolute; width: 92px; right:30px; bottom:35px; text-align: center;}
.frame .icons .fa{color:#697a89; padding:0;  font-size: 16px; cursor:pointer;  margin:7px;}
.frame .icons .fa.hover{color:#3e92e4;}
