<script>
function doSubmit()
{
	if ($("#loginName").val()=="")
	{
		$("#loginName").focus();
		alert("请输入用户名与密码");
	}
	else if ($('#password').val()=="")
	{
		$('#password').focus();
		alert("请输入用户名与密码");
	}
	else
	{
		$("#dataForm").submit();
	}
}
function doLoad()
{
	<%=state.equals("ERROR")?"alert('用户名或密码错误，请重新登录');$('#password').focus();":";"%>	
}
</script>
