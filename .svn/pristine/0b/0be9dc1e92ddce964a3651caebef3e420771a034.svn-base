<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $(".ajax-fc-container").captcha({formId: "dataForm"});
        $('[data-toggle="popover"]').popover();
        //$('[data-toggle="tooltip"]').tooltip()
        $(".row-data .icon-group,.p-content .list-group").interaction({type: "button"});
        $('#userType').combobox({
            valueField: 'value',
            textField: 'label',
            data: [{
                label: '普通用户',
                value: '1'
            }, {
                label: '数据发布者',
                value: '2'
            }],
            onLoadSuccess: function () {
                $('#userType').combobox("setValue", '1');//这里写设置默认值
            },
            onSelect: function (rec) {
                switch (rec.value) {
                    case '1':
                        $('#dataPublisher').hide();
                        break;
                    case '2':
                        $('#dataPublisher').show();
                        break;
                }
            }
        });
        $('.btn-primary').on('click', function () {
            if ($('#dataForm').form('validate')) {
                $.ajax({
                    type: "post",
                    url: "base/userAction.dox?action=checkCaptcha",
                    data: {captcha: $('input[name="captcha"]').val()},
                    async: false,
                    success: function (data) {
                        if (data == 'false') {
                            $(".ajax-fc-container").captcha({formId: "dataForm"});
                            $.messager.alert('警告', '验证码错误', 'warning');
                            return;
                        } else if (data == 'success') {
                            //$('#dataForm').submit();
                            $("#dataForm").ajaxSubmit({
                                type: 'post',
                                url: "base/userAction.dox?action=regData" ,
                                success: function(regBack){
                                    if(regBack=='success') {
                                        $.messager.alert('成功', '注册成功！如您申请的是数据发布者则我们的工作人员会在7个工作日内审核并联系您，请耐心等待。', 'info');
                                        $("#dataForm").clearForm();
                                        $('#register-modal').modal('hide');
                                    }
                                }
                            });
                        }
                    }
                });
            }
        });
    });

</script>
