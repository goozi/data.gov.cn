<%@ page contentType="text/html; charset=GBK" %>
<%@ include file="../include.jsp" %>
<%@ page import="com.dhccity.base.entity.BaseType" %>
<%
	long id=req.getLong("id");
	int state=req.getInt("state")==-1?-1:1;
    Iterator it=new BaseType().findAllChildType(id,state).iterator();
%>
<html xmlns:kingtop>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
<LINK  href="../style/default.css" rel=stylesheet>
<script type="text/javascript" src="../js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="../js/body.js"></script>
<title><%=Config.SystemName%></title>
</head>
<body leftmargin="0" topmargin="0">
<table width="100%" height="429" border="0" align="center" cellpadding="0" cellspacing="0">
<%if (id!=0) {%>
  <tr> 
    <td height="29" valign="middle">

		<input type=button class="btn"  onClick="openCenter('childType_add.jsp?parentId=<%=id%>','',210,700);"  border="0" name="save24" value="新建" > 
      <input type=button class="btn"  onClick="editData(getElementsByName('idArray'),'childType_edit.jsp?id=',210,700)"  border="0" name="save224" value="编辑" >

    </td>
    <td align="right" valign="middle">
<input type="checkbox" value="-1" id="state" name="state" onClick="doChange()" <%=state==-1?"checked":""%>>
      显示已删除选项</td>
  </tr>
  <%}%>
  <tr> 
    <td width="72%" height="400" colspan="2" valign="top"> <table width="100%" border="0" align=center cellpadding=0 cellspacing=1  class="listTree"  style="behavior:url(../htc/treeTable.htc)" FilesDir="../htc" startcol="1"  expancelevel="2">
        <tbody>
          <tr class="title"   > 
            <td  width="5%">选择</td>
            <td  width="32%" >名称</td>
            <td  width="21%">值</td>
            <td>顺序种子</td>
            <td  height=24>有效</td>
            <td>默认</td>
          </tr>
          <%      
    while(it.hasNext())
	{
		BaseType baseType=(BaseType) it.next();%>
          <tr level="<%=baseType.getLevel()%>" isLeaf="<%=baseType.isLeaf()%>" html="<%=baseType.getLevelHtml()%>"> 
            <td align="center" ><input name="idArray" type="checkbox" value="<%=baseType.getId()%>"></td>
            <td width="32%" align="left"><%=baseType.getName()%></td>
            <td width="21%"><%=baseType.getValue()%></td>
            <td width="15%"><%=baseType.getSequ()%></td>
            <td width="11%"><%=baseType.getState()==1?"√":"×"%></td>
            <td width="11%"><%=baseType.getIsDefault()==1?"√":"×"%></td> </tr>
          <%
    }
%>
        </tbody>
      </table></td>
  </tr>
</table>
</body>
</html>
<script>
function doChange()
{
	if (document.getElementById("state").checked)
		location.href="childType_list.jsp?id=<%=id%>&state=-1" ;
	else
		location.href="childType_list.jsp?id=<%=id%>&state=1" ;
}
</script>