<%@ page contentType="text/html; charset=GBK"%>
<%@ include file="../include.jsp" %>
<%@ page import="com.dhccity.data.entity.DataGroup" %>
<%
	long id=req.getLong("id");
	DataGroup dataGroup = (DataGroup) new DataGroup().findById(id);
%>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
	<LINK  href="../style/default.css" rel=stylesheet>
	<link rel="stylesheet" href="../htc/default.jss" type="text/css">
	<title><%=Config.SystemName%></title>
</head>
<body>
	<form name="dataForm" method="post" action="dataGroupAction.do?action=updateData" Check="true" Change="true">
	<table class="edit"  cellspacing=1 cellpadding=3 width="95%" align=center border=0>
		<tr class="title">
			<td colspan="4"><b>专题编辑</b></td>
		</tr>
		<tr>
			<td width="15%"  align="right">名称</td>
			<td><input name="name" type="text" size="30" value="<%=dataGroup.getName()%>" validType="maxLength[160]" class="easyui-validatebox"></td>
			<td width="15%"  align="right">标题</td>
			<td><input name="title" type="text" size="30" value="<%=dataGroup.getTitle()%>" validType="maxLength[160]" class="easyui-validatebox"></td>
		</tr>
		<tr>
			<td width="15%"  align="right">描述</td>
			<td><input name="desc" type="text" size="30" value="<%=dataGroup.getDesc()%>" validType="maxLength[800]" class="easyui-validatebox"></td>
			<td width="15%"  align="right">创建时间</td>
			<td><input name="createTime" type="text" size="30" DataType="date" value="<%=dataGroup.getCreateTime()%>" validType="maxLength[6]" class="easyui-validatebox"></td>
		</tr>
		<tr>
			<td width="15%"  align="right">状态</td>
			<td><input name="state" type="text" size="30" DataType="int" value="<%=dataGroup.getState()%>" validType="maxLength[1]" class="easyui-validatebox"></td>
			<td width="15%"  align="right">创建人</td>
			<td><input name="creator" type="text" size="30" DataType="int" value="<%=dataGroup.getCreator()%>" validType="maxLength[18]" class="easyui-validatebox"></td>
		</tr>
		<tr>
			<td width="15%"  align="right">审核状态</td>
			<td><input name="approvalStatus" type="text" size="30" DataType="int" value="<%=dataGroup.getApprovalStatus()%>" validType="maxLength[1]" class="easyui-validatebox"></td>
			<td width="15%"  align="right">LOGO</td>
			<td><input name="logo" type="text" size="30" value="<%=dataGroup.getLogo()%>" validType="maxLength[160]" class="easyui-validatebox"></td>
		</tr>
	</table>
	<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0">
		<tr>
			<td height="29" align="center">
				<input name="id" type="hidden" value="<%=dataGroup.getId()%>">
				<input type="submit" class="btn" border="0" name="sure" value="确定" >
				<input type="button" class="btn" border="0" name="return" value="返回" onclick="history.back(-1);">
			</td>
		</tr>
	</table>
	</form>
</body>
</html>
