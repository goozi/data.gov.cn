public class BaseSecurityUrl extends Ado
{
	private long id; //ID
	private long securityId; //模块权限ID
	private String url; //网址
	private String query; //请求参数

	//{defaultOrder = "o.id";} //默认的排序方式

	public BaseSecurityUrl()
	{
	}

	public BaseSecurityUrl(long id)
	{
		this.id = id;
	}

	/**
	 * 对应字段：[ID]  类型：NUMBER(22)
	 */
	public void setId(long id)
	{
		this.id = id;
	}

	/**
	 * 对应字段：[ID]  类型：NUMBER(22)
	 */
	public long getId()
	{
		return this.id;
	}

	/**
	 * 对应字段：[模块权限ID]  类型：NUMBER(12)
	 */
	public void setSecurityId(long securityId)
	{
		this.securityId = securityId;
	}

	/**
	 * 对应字段：[模块权限ID]  类型：NUMBER(12)
	 */
	public long getSecurityId()
	{
		return this.securityId;
	}

	/**
	 * 对应字段：[网址]  类型：VARCHAR2(200)
	 */
	public void setUrl(String url)
	{
		this.url = url;
	}

	/**
	 * 对应字段：[网址]  类型：VARCHAR2(200)
	 */
	public String getUrl()
	{
		return this.url == null ? "" : this.url;
	}

	/**
	 * 对应字段：[请求参数]  类型：VARCHAR2(200)
