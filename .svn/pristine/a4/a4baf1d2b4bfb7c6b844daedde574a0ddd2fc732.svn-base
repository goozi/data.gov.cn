<%@ page contentType="text/html; charset=GBK" %>
<%@ include file="../include.jsp" %>
<%@ page import="com.dhccity.base.entity.BaseUserSecurity" %>
<%@ page import="com.dhccity.base.entity.BaseSecurity" %>
<%
	long id=req.getLong("id");
    Iterator it=new BaseUserSecurity().findAllBySecurityId(id).iterator();
%>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
<LINK  href="../style/default.css" rel=stylesheet>
<link rel="stylesheet" href="../htc/default.jss" type="text/css">
<title><%=Config.SystemName%></title>
</head>
<body leftmargin="0" topmargin="0">
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
  <%if (id!=0&&BaseSecurity.isChildSecurity(id)) {%>
  <tr> 
    <td width="72%" height="29" valign="top"> <input type=button class="btn"  onClick="openCenter('user_security_add.jsp?securityId=<%=id%>','',285,700);"  border="0" name="add" value="新建" > 
      <input type=button class="btn"  onClick="doDelete()"  border="0" name="delete" value="删除" > 
    </td>
  </tr>
  <%}%>
</table>
<table class="list" style="behavior:url(../htc/table.htc)" cellspacing=1 cellpadding=0 width="100%"  border=0 >
  <tbody>
    <tr class="title"   > 
      <td  width="5%">选择</td>
      <td  width="32%" >功能</td>
      <td  width="21%">类型</td>
      <td>部门</td>
      <td  height=24>人员</td>
    </tr>
    <%      
    while(it.hasNext())
	{
		BaseUserSecurity baseUserSecurity=(BaseUserSecurity) it.next();
		
		%>
    <tr class="odd"> 
      <td width="5%"><input type="checkbox" name="idArray" value="<%=baseUserSecurity.getId()%>"></td>
      <td width="32%" align="left"><%=baseUserSecurity.getSecurityArrayName()%></td>
      <td width="21%"><%=baseUserSecurity.getTypeName()%></td>
      <td width="15%"><%=baseUserSecurity.getDepartmentName()%></td>
      <td width="11%"><%=baseUserSecurity.getOwnerName()%></td>
    </tr>
    <%
    }
%>
  </tbody>
</table>
</body>
</html>
<script language="javascript">
//删除--恢复选中记录
function doDelete(state)
{
	if (setupData(document.getElementsByName('idArray'),'userSecurityAction.do?action=deleteData'))
	document.location.reload();
}
</script>