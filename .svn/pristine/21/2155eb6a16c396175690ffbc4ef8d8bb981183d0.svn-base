public class BaseDocument extends Ado
{
	private long id;	//ID
	private String name;	//显示名称
	private String fileName;	//原有文件名称
	private String postfix;		//后缀
	private Date createTime;	//创建时间
	private String sourceCode;	//来源代号
	private long sourceId;		//来源ID
	private double sequ;		//顺序(暂时没有)
	private long fileSize;		//文件大小
	private long userId;		//用户ID

	public BaseDocument()
	{
	}

	public BaseDocument(long id)
	{
		this.id = id;
	}

	/**
	 * 对应字段：[ID]  类型：NUMBER(22)
	 */
	public void setId(long id)
	{
		this.id = id;
	}

	/**
	 * 对应字段：[ID]  类型：NUMBER(22)
	 */
	public long getId()
	{
		return this.id;
	}

	/**
	 * 对应字段：[显示名称]  类型：VARCHAR2(200)
	 */
	public void setName(String name)
	{
		this.name = name;
	}

	/**
	 * 对应字段：[显示名称]  类型：VARCHAR2(200)
	 */
	public String getName()
	{
		return this.name == null ? "" : this.name;
	}

	/**
	 * 对应字段：[原有文件名称]  类型：VARCHAR2(200)
	 */
	public void setFileName(String fileName)
	{
		this.fileName = fileName;
	}

	/**
	 * 对应字段：[原有文件名称]  类型：VARCHAR2(200)
	 */
	public String getFileName()
	{
		return this.fileName == null ? "" : this.fileName;
	}

	/**
	 * 对应字段：[后缀]  类型：VARCHAR2(100)
	 */
	public void setPostfix(String postfix)
	{
		this.postfix = postfix;
	}

	/**
	 * 对应字段：[后缀]  类型：VARCHAR2(100)
	 */
	public String getPostfix()
	{
		return this.postfix == null ? "" : this.postfix;
	}

	/**
	 * 对应字段：[创建时间]  类型：DATE(7)
	 */
	public void setCreateTime(Date createTime)
	{
		this.createTime = createTime;
	}

	/**
	 * 对应字段：[创建时间]  类型：DATE(7)
	 */
	public Date getCreateTime()
	{
		return this.createTime;
	}

	/**
	 * 对应字段：[来源代号]  类型：VARCHAR2(50)
	 */
	public void setSourceCode(String sourceCode)
	{
		this.sourceCode = sourceCode;
	}

	/**
	 * 对应字段：[来源代号]  类型：VARCHAR2(50)
	 */
	public String getSourceCode()
	{
		return this.sourceCode == null ? "" : this.sourceCode;
	}

	/**
	 * 对应字段：[来源ID]  类型：NUMBER(12)
	 */
	public void setSourceId(long sourceId)
	{
		this.sourceId = sourceId;
	}

	/**
	 * 对应字段：[来源ID]  类型：NUMBER(12)
	 */
	public long getSourceId()
	{
		return this.sourceId;
	}

	/**
	 * 对应字段：[顺序(暂时没有)]  类型：NUMBER(22)
	 */
	public void setSequ(double sequ)
	{
		this.sequ = sequ;
	}

	/**
	 * 对应字段：[顺序(暂时没有)]  类型：NUMBER(22)
	 */
	public double getSequ()
	{
		return this.sequ;
	}

	/**
	 * 对应字段：[文件大小]  类型：NUMBER(12)
	 */
	public void setFileSize(long fileSize)
	{
		this.fileSize = fileSize;
	}

	/**
	 * 对应字段：[文件大小]  类型：NUMBER(12)
	 */
	public long getFileSize()
	{
		return this.fileSize;
	}

	/**
	 * 对应字段：[用户ID]  类型：NUMBER(8)
	 */
	public void setUserId(long userId)
	{
		this.userId = userId;
	}

	/**
	 * 对应字段：[用户ID]  类型：NUMBER(8)
	 */
	public long getUserId()
	{
		return this.userId;
	}

	//===============================以下为自编辑代码===================================

	/**
	 * 通过来源代码与ID号查找所有记录
	 * @param sourceCode String   来源代码
	 * @param sourceId long       来源ID
	 * @return List
	 */
	public List findBySource(String sourceCode, long sourceId)
	{
		String hql = "from BaseDocument o where o.sourceCode='" + sourceCode + "' and o.sourceId=" + sourceId + " order by o.id";
		return this.findAll(hql);
	}

	/**
	 * 通过来源代码与ID号查找所有记录
	 * @param sourceCode String   来源代码
	 * @param sourceId long       来源ID
	 * @return List
	 */
	public List findBySource(String sourceCode, int userId, String name)
	{
		String hql = "from BaseDocument o where o.name like '%" + name + "%' and  o.sourceCode='" + sourceCode + "' and o.userId=" + userId + " order by o.id";
		return this.findAll(hql);
	}

}
